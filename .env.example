# AI Auto-Wiring System Environment Configuration
# Copy this file to .env and update with your settings

# ===========================================
# Core Settings
# ===========================================
AI_ENV=development
AI_LOG_LEVEL=INFO
AI_DEBUG=true

# ===========================================
# MCP (Model Context Protocol) Settings
# ===========================================
AI_MCP_ENABLED=true
AI_MCP_PORT=3000
AI_MCP_HOST=localhost
AI_MCP_SESSION_TIMEOUT=3600

# ===========================================
# SSH Settings
# ===========================================
AI_SSH_ENABLED=false
AI_SSH_KEY_PATH=~/.ssh/id_rsa
AI_SSH_KNOWN_HOSTS=~/.ssh/known_hosts
AI_SSH_DEFAULT_TIMEOUT=30
AI_SSH_MAX_CONNECTIONS=10

# ===========================================
# Agent Settings
# ===========================================
AI_AGENT_MAX_RETRIES=3
AI_AGENT_TIMEOUT=30
AI_AGENT_DEFAULT_MODEL=gpt-4

# ===========================================
# Skills Settings
# ===========================================
AI_SKILLS_AUTO_LOAD=true
AI_SKILLS_CACHE_ENABLED=true
AI_SKILLS_CACHE_TTL=3600

# ===========================================
# Security Settings
# ===========================================
AI_SECURITY_ENABLE_SANDBOXING=true
AI_SECURITY_MAX_REQUEST_SIZE=10485760

# ===========================================
# Database Settings (Optional)
# ===========================================
# AI_DATABASE_HOST=localhost
# AI_DATABASE_PORT=5432
# AI_DATABASE_NAME=autowire
# AI_DATABASE_USER=autowire_user
# AI_DATABASE_PASSWORD=your_password

# ===========================================
# Redis Settings (Optional - for distributed state)
# ===========================================
# AI_REDIS_HOST=localhost
# AI_REDIS_PORT=6379
# AI_REDIS_DB=0
# AI_REDIS_PASSWORD=

# ===========================================
# External API Keys (Optional)
# ===========================================
# AI_OPENAI_API_KEY=your_openai_key
# AI_ANTHROPIC_API_KEY=your_anthropic_key
# AI_GOOGLE_API_KEY=your_google_key

# ===========================================
# Monitoring & Observability (Optional)
# ===========================================
# AI_METRICS_ENABLED=false
# AI_METRICS_PORT=9090
# AI_TRACING_ENABLED=false
